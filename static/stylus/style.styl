@import 'normalize.styl'
@import 'fonts.styl'

body
	font-family: 'Open Sans', sans-serif;

.Avatar
	text-align center

.Avatar-image
	width 240px

.Contact-icon
	padding 10px
	border 3px solid #1abc9c
	border-radius 100%
	background-color #1abc9c
	color white
	font-size 1.5em

.Contact-item
	font-size 1rem
	padding 15px
	border-radius 25px
	display block
	position relative

.Contact-link
	color #1abc9c
	text-decoration none
	display inline-block
	border 3px solid transparent
	position absolute
	top 1px
	left 38px
	padding 10px 0px 13px 33px

.Contact-list
	padding 0px
	font-size 0px

.Footer
	border-top 1px solid #b7b7b7
	margin 20px 1%
	padding 5px

.Footer-text
	color #b7b7b7

.green-text
	color rgb(26,188,156)

.Header
	text-align center
	padding 240px 0px

.Header-description
	font-size 2em

.Header-title
	font-size 5em
	margin-bottom .1675em

.Introduction
	color #b7b7b7
	text-align center

.justify
	text-align justify

.Nav
	// background: rgba(238,238,238,0.7);
	background: rgba(0,0,0,0.7);
	left 0
	position fixed
	right 0
	text-align center
	top 0
	font-size 0px

.Nav-item
	display inline-block
	list-style none
	transition .3s
	&:hover
		background: rgba(0,0,0,1);

.Nav-link
	color white
	text-decoration none
	font-size 1rem
	padding 16px 5px
	display inline-block

.Nav-list
	margin 0px
	padding 0px

.Section
	padding 50px 1% 50px 1%

.Section-title
	text-align center
	font-size 3em
	margin-bottom 0px

.Skill-list
	border 5px solid rgb(26,188,156)
	padding 10px
	font-size 0px

.Skill-item
	background rgba(26,188,156,1)
	color white
	padding 5px 10px 5px 20px
	border-radius 8px
	transition .3s
	display inline-block
	list-style none
	font-size 1rem
	margin 2px
	&:hover
		padding 5px 20px 5px 10px
		background rgba(26,188,156,.7)
		color black

.Work-date
	text-align right
	margin .5em 0px
	font-size 1.8em

.Work-description
	text-align justify

.Work-item
	border-top 1px solid #d4d4d4
	// margin 0px 25px
	text-align right
	&:nth-last-child(1)
		border-bottom 1px solid #d4d4d4

.Work-title
	font-weight normal
	font-size .9em
	margin 5px 0px

.Work-company
	font-size 1.2em
	margin 5px 0px

.Work-until
	&:before
		content " - "
